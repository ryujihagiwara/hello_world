<div class="index">

  <table class="index__table">
    <thead>
      <tr>
        <th></th>
        <th>title</th>
        <th>date</th>
        <th>nickname</th>
        <th>comments</th>
        <th>good!</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= attachment_image_tag post, :image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
        <td><%= post.title %></td>
        <td><%= post.created_at %></td>
        <td><%= post.learner.nickname %></td>
        <td><%= post.comments.count %></td>
        <td><%= post.favorites.count %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>