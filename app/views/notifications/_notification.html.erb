<% visiter = notification.visiter %>
<% post = notification.post %>

<div class="learner-view clearfix ">
  <%= link_to learner_path(notification.visiter) do %>
    <%= attachment_image_tag visiter, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg", size: "100x100", class:"profile-img-circle notification-image" %>
  <% end %>
  <span class="notification-type">
    <%== notification_form(notification) %>
  </span>
  <span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} ago)" %></span>

  <% if !@comment.nil? %>
    <p class="moderate-font text-center" style="font-size: 20px; color: white;"><%= @comment %></p>
  <% end %>
</div>