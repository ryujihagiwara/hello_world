<div class="container">

    <div class="row post-index">

      <div class="col-xs-3">

        <h1 class="my-4">Post Category</h1>
        <div class="list-group">
          <a href="#" class="list-group-item">Category 1</a>
          <a href="#" class="list-group-item">Category 2</a>
          <a href="#" class="list-group-item">Category 3</a>
        </div>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-xs-2"></div>

      <!-- post index -->
      <div class="col-xs-5 post-index-right">
        <% @posts.each do |post| %>
        <div class="row">
          <div class="col-xs-12 post-content">

            <!-- learner image/nickname -->
            <div class="row">
              <div class="col-xs-3">
                <%= attachment_image_tag post.learner, :profile_image, :fill, 60,60, fallback: "no_image.jpg", size: '80x80', class: "img-circle" %>
              </div>
              <div class="col-xs-4 col-xs-offset-1 post-by">
                <strong class="nickname"><%= post.learner.nickname %></strong>
              </div>
            </div>
            <!-- // -->

            <!-- post title -->
            <div class="row">
              <div class="col-xs-12 col-xs-offset-2">
                <%= link_to post_path(post) do %>
                  <%= post.title %>
                <% end %>
              </div>
            </div>
            <!-- // -->

            <div class="row blank-space"></div>

            <!-- post body -->
            <div class="row">
              <div class="col-xs-12">
                <%= post.body %>
              </div>
            </div>

            <!-- post image -->
            <div class="row">
              <div class="col-xs-6 post-index-image">
                <%= attachment_image_tag post, :image, :fill, 100, 100 %>
              </div>
            </div>
            <!-- // -->

              <!-- いいね　アイコン -->
              <div class="post-footer">
                <strong class="comment-icon">
                  <i class="far fa-comment"></i>
                  <%= post.comments.count %>
                </strong>
              </div>
              <!-- // -->
          </div>

        </div>

        <% end %>
      </div>
      <!-- // -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->