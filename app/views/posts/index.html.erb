<div class="container">

  <div class="row post-index">

    <% if flash[:notice] %>
      <p class="post-success"><%= flash[:notice] %></p>
    <% end %>

      <h2 class="index-main-title"><span class="question-color"><%= link_to 'Questions', question_path, class: "text-decoration-1", remote: true %></span>/<span class="tweet-color"><%= link_to 'Tweets', tweet_path, class: "text-decoration-2", remote: true %></span></h2>

      <!-- post index -->
      <div class="col-xs-12 post-index-right">

        <%= render 'question', posts: @posts %>

      </div>
      <!-- // -->

      <!-- pagination -->
      <div class="paginate">
        <%= paginate @posts %>
      </div>
      <!-- // -->

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->