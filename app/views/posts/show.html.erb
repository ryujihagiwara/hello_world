<div class="PostShow">
  <div class="PostShow__left">
    <div class="PostShow__image">
      <%= attachment_image_tag @post, :image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
    </div>
  </div>

  <div class="PostShow__right">
    <div class="PostShow__title">
      <%= @post.title %>
    </div>
    <div class="PostShow__body">
      <%= @post.body %>
    </div>
  </div>
</div>

